@page "/"
@using Microsoft.Extensions.Logging
@inject ILogger<Index> Logger

<h1>Yelloo!</h1>


<AuthorizeView>
    <Authorized>
        <p>Your Claims</p>
        <table class="table">
            <thead>
            <tr>
                <th>Claim Type</th>
                <th>Value</th>
            </tr>
            </thead>
            
            <tbody>
            @foreach (var claim in context.User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
            </tbody>
        </table>
    </Authorized>
    <NotAuthorized>
        <p>Please login to view your users</p>
    </NotAuthorized>
</AuthorizeView>

